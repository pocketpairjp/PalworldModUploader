<Window x:Class="PalworldModUploader.DependenciesSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Dependencies"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="300"
        MinWidth="400">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Select mods that this mod depends on:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12" />

        <Border Grid.Row="1"
                BorderBrush="#D7D7D7"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ModListItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="8,6"
                                      FontSize="13">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding ModName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text=" ("
                                                   Foreground="#666666" />
                                        <TextBlock Text="{Binding PackageName}"
                                                   Foreground="#666666" />
                                        <TextBlock Text=")"
                                                   Foreground="#666666" />
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Height="28" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click">OK</Button>
            <Button Width="90" Height="28" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>

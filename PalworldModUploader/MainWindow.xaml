<Window x:Class="PalworldModUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Palworld Mod Uploader"
        Height="680"
        Width="960"
        MinWidth="960"
        MinHeight="680"
        Background="#FCFCFF">
    <Window.Resources>
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#F3F6FB" />
                                <Setter TargetName="root" Property="BorderBrush" Value="#C9D4F0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E7EDF9" />
                                <Setter TargetName="root" Property="BorderBrush" Value="#B6C5EE" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="BorderBrush" Value="#D7D7D7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="bd"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#7AA2F7" />
                                <Setter TargetName="bd" Property="Background" Value="#FCFDFF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowHeight" Value="36" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AlternatingRowBackground" Value="#FAFAFD" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EEE" />
            <Setter Property="VerticalGridLinesBrush" Value="#EEE" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F7FB" />
            <Setter Property="BorderBrush" Value="#E6EAF4" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,6" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Workshop directory selection -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <TextBlock Text="Workshop Content Directory:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <TextBox x:Name="WorkshopDirTextBox"
                     Margin="0,0,8,0"
                     Height="32"
                     Width="480"
                     VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Click="SelectWorkshopDirectoryButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="..." />
                    </StackPanel>
                </Button>
                <Button Click="ReloadButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Reload" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>


        <!-- Main content -->
        <Grid Grid.Row="1"
              Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="ModsDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      Margin="0,0,12,0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Directory"
                                        Binding="{Binding DirectoryName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Mod Name"
                                        Binding="{Binding ModName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Author"
                                        Binding="{Binding Author}"
                                        Width="2*" />
                    <DataGridCheckBoxColumn Header="Subscribed"
                                            Binding="{Binding IsSubscribed}"
                                            Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#FFBDBDBD"
                        BorderThickness="1"
                        Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Thumbnail with D&D support -->
                            <Border x:Name="ThumbnailDropArea"
                                    Height="180"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="#F8F8F8"
                                    AllowDrop="True"
                                    Drop="ThumbnailDropArea_Drop"
                                    DragOver="ThumbnailDropArea_DragOver"
                                    DragLeave="ThumbnailDropArea_DragLeave"
                                    MouseLeftButtonUp="ThumbnailDropArea_Click"
                                    Cursor="Hand">
                                <Grid>
                                    <Image x:Name="ThumbnailImage"
                                           Stretch="Uniform" />
                                    <StackPanel x:Name="ThumbnailPlaceholder"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Visibility="Collapsed">
                                        <TextBlock Text="Drop image here"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#888888"
                                                   FontSize="14" />
                                        <TextBlock Text="or click to select"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#AAAAAA"
                                                   FontSize="12"
                                                   Margin="0,4,0,0" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Mod Name -->
                            <TextBlock Text="Mod Name"
                                       Margin="0,12,0,0"
                                       FontWeight="Bold" />
                            <TextBox x:Name="ModNameTextBox"
                                     Margin="0,4,0,0"
                                     IsEnabled="False"
                                     TextChanged="ModInfoField_TextChanged" />

                            <!-- Package Name -->
                            <TextBlock Text="Package Name"
                                       Margin="0,12,0,0"
                                       FontWeight="Bold" />
                            <TextBox x:Name="PackageNameTextBox"
                                     Margin="0,4,0,0"
                                     IsEnabled="False"
                                     TextChanged="ModInfoField_TextChanged" />

                            <!-- Version -->
                            <TextBlock Text="Version"
                                       Margin="0,12,0,0"
                                       FontWeight="Bold" />
                            <TextBox x:Name="VersionTextBox"
                                     Margin="0,4,0,0"
                                     IsEnabled="False"
                                     TextChanged="ModInfoField_TextChanged" />

                            <!-- MinRevision -->
                            <TextBlock Text="MinRevision"
                                       Margin="0,12,0,0"
                                       FontWeight="Bold" />
                            <TextBox x:Name="MinRevisionTextBox"
                                     Margin="0,4,0,0"
                                     IsEnabled="False"
                                     TextChanged="ModInfoField_TextChanged" />

                            <!-- Author -->
                            <TextBlock Text="Author"
                                       Margin="0,12,0,0"
                                       FontWeight="Bold" />
                            <TextBox x:Name="AuthorTextBox"
                                     Margin="0,4,0,0"
                                     IsEnabled="False"
                                     TextChanged="ModInfoField_TextChanged" />

                            <!-- Install Rule Types -->
                            <TextBlock Text="Install Rule Types"
                                       Margin="0,16,0,0"
                                       FontWeight="Bold" />
                            <TextBlock x:Name="InstallRuleManualWarning"
                                       Text="Manually modified (edit Info.json directly)"
                                       Margin="0,4,0,0"
                                       Foreground="#D97706"
                                       FontStyle="Italic"
                                       Visibility="Collapsed" />
                            <StackPanel Margin="0,4,0,0">
                                <CheckBox x:Name="LuaTypeCheckBox"
                                          Content="Lua (Scripts)"
                                          IsEnabled="False"
                                          Checked="InstallRuleCheckBox_Changed"
                                          Unchecked="InstallRuleCheckBox_Changed" />
                                <CheckBox x:Name="PaksTypeCheckBox"
                                          Content="Paks"
                                          IsEnabled="False"
                                          Margin="0,4,0,0"
                                          Checked="InstallRuleCheckBox_Changed"
                                          Unchecked="InstallRuleCheckBox_Changed" />
                                <CheckBox x:Name="LogicModsTypeCheckBox"
                                          Content="LogicMods"
                                          IsEnabled="False"
                                          Margin="0,4,0,0"
                                          Checked="InstallRuleCheckBox_Changed"
                                          Unchecked="InstallRuleCheckBox_Changed" />
                                <CheckBox x:Name="PalSchemaTypeCheckBox"
                                          Content="PalSchema"
                                          IsEnabled="False"
                                          Margin="0,4,0,0"
                                          Checked="InstallRuleCheckBox_Changed"
                                          Unchecked="InstallRuleCheckBox_Changed" />
                            </StackPanel>

                            <!-- Dependencies -->
                            <TextBlock Text="Dependencies"
                                       Margin="0,16,0,0"
                                       FontWeight="Bold" />
                            <DockPanel Margin="0,4,0,0">
                                <Button x:Name="EditDependenciesButton"
                                        Content="..."
                                        DockPanel.Dock="Right"
                                        Width="40"
                                        Height="24"
                                        Padding="0"
                                        Margin="8,0,0,0"
                                        IsEnabled="False"
                                        Click="EditDependenciesButton_Click" />
                                <TextBox x:Name="DependenciesTextBox"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"
                                         VerticalContentAlignment="Center" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons - Fixed at bottom -->
                <StackPanel Grid.Row="1" Margin="0,8,0,0">
                    <Button x:Name="SaveModInfoButton"
                            Content="Save Info.json"
                            Height="32"
                            Margin="0,0,0,0"
                            IsEnabled="False"
                            Click="SaveModInfoButton_Click" />
                    <Button x:Name="OpenModDirectoryButton"
                            Content="Open Mod Directory"
                            Height="32"
                            Margin="0,8,0,0"
                            IsEnabled="False"
                            Click="OpenModDirectoryButton_Click" />
                    <Button x:Name="OpenInSteamButton"
                            Content="Open In Steam"
                            Height="32"
                            Margin="0,8,0,0"
                            IsEnabled="False"
                            Click="OpenInSteamButton_Click" />
                    <Button x:Name="UploadButton"
                            Content="Upload To Steam"
                            Height="32"
                            Margin="0,8,0,0"
                            IsEnabled="False"
                            Click="UploadButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Action buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,12">
            <Button Content="Create New Mod"
                    Width="140"
                    Height="32"
                    Margin="0,0,12,0"
                    Click="CreateNewModButton_Click" />
            <Button Content="Guide"
                    Width="90"
                    Height="32"
                    Click="HelpButton_Click" />
        </StackPanel>


        <!-- Status -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="ProgressBar"
                         Grid.Column="0"
                         Height="18"
                         Minimum="0"
                         Maximum="100"
                         Margin="0,0,12,0" />
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
<Window x:Class="PalworldModUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Palworld Mod Uploader"
        Height="680"
        Width="960"
        MinWidth="960"
        MinHeight="680"
        Background="#FCFCFF">
    <Window.Resources>
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#F3F6FB" />
                                <Setter TargetName="root" Property="BorderBrush" Value="#C9D4F0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E7EDF9" />
                                <Setter TargetName="root" Property="BorderBrush" Value="#B6C5EE" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="BorderBrush" Value="#D7D7D7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="bd"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#7AA2F7" />
                                <Setter TargetName="bd" Property="Background" Value="#FCFDFF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowHeight" Value="36" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AlternatingRowBackground" Value="#FAFAFD" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EEE" />
            <Setter Property="VerticalGridLinesBrush" Value="#EEE" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F7FB" />
            <Setter Property="BorderBrush" Value="#E6EAF4" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,6" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Workshop directory selection -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <TextBlock Text="Workshop Content Directory:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <TextBox x:Name="WorkshopDirTextBox"
                     Margin="0,0,8,0"
                     Height="32"
                     Width="480"
                     VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Click="SelectWorkshopDirectoryButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="..." />
                    </StackPanel>
                </Button>
                <Button Click="ReloadButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Reload" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>


        <!-- Main content -->
        <Grid Grid.Row="1"
              Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="ModsDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      Margin="0,0,12,0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Directory"
                                        Binding="{Binding DirectoryName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Mod Name"
                                        Binding="{Binding ModName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Author"
                                        Binding="{Binding Author}"
                                        Width="2*" />
                    <DataGridCheckBoxColumn Header="Subscribed"
                                            Binding="{Binding IsSubscribed}"
                                            Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Column="1"
                    BorderBrush="#FFBDBDBD"
                    BorderThickness="1"
                    Padding="12">
                <StackPanel>
                    <Image x:Name="ThumbnailImage"
                           Height="180"
                           Stretch="Uniform" />
                    <TextBlock Text="Mod Name"
                               Margin="0,12,0,0"
                               FontWeight="Bold" />
                    <TextBlock x:Name="ModNameTextBlock"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                    <TextBlock Text="Package Name"
                               Margin="0,12,0,0"
                               FontWeight="Bold" />
                    <TextBlock x:Name="PackageNameTextBlock"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                    <TextBlock Text="Author"
                               Margin="0,12,0,0"
                               FontWeight="Bold" />
                    <TextBlock x:Name="AuthorTextBlock"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                    <TextBlock Text="Description"
                               Margin="0,12,0,0"
                               FontWeight="Bold" />
                    <TextBox x:Name="DescriptionTextBox"
                             Margin="0,4,0,0"
                             Height="100"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,12">
            <Button Content="Create New Mod"
                    Width="140"
                    Height="32"
                    Margin="0,0,12,0"
                    Click="CreateNewModButton_Click" />
            <Button x:Name="OpenModDirectoryButton"
                    Content="Open Mod Directory"
                    Width="160"
                    Height="32"
                    Margin="0,0,12,0"
                    IsEnabled="False"
                    Click="OpenModDirectoryButton_Click" />
            <Button x:Name="OpenInSteamButton"
                    Content="Open In Steam"
                    Width="130"
                    Height="32"
                    Margin="0,0,12,0"
                    IsEnabled="False"
                    Click="OpenInSteamButton_Click" />
            <Button x:Name="UploadButton"
                    Content="Upload To Steam"
                    Width="140"
                    Height="32"
                    Margin="0,0,12,0"
                    IsEnabled="False"
                    Click="UploadButton_Click" />
            <Button Content="Guide"
                    Width="90"
                    Height="32"
                    Click="HelpButton_Click" />
        </StackPanel>


        <!-- Status -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="ProgressBar"
                         Grid.Column="0"
                         Height="18"
                         Minimum="0"
                         Maximum="100"
                         Margin="0,0,12,0" />
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
<Window x:Class="PalworldModUploader.ChangeNotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Notes"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Please enter change notes (optional):" FontWeight="SemiBold" />

        <TextBox x:Name="ChangeNotesTextBox"
                 Grid.Row="1"
                 Margin="0,8,0,8"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Height="28" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click">OK</Button>
            <Button Width="90" Height="28" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>